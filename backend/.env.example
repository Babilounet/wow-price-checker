# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Blizzard API Configuration
BLIZZARD_CLIENT_ID=your_client_id_here
BLIZZARD_CLIENT_SECRET=your_client_secret_here
BLIZZARD_REGION=eu
# Options: us, eu, kr, tw, cn

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wow_price_checker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=600
# TTL in seconds (600 = 10 minutes)

# Rate Limiting
BLIZZARD_API_RATE_LIMIT_PER_HOUR=36000
BLIZZARD_API_RATE_LIMIT_PER_SECOND=100

# Caching Strategy
CACHE_AH_SNAPSHOT_TTL=3600
# Auction house snapshot cache (1 hour)
CACHE_ITEM_DATA_TTL=86400
# Item static data cache (24 hours)

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# CORS
CORS_ORIGIN=http://localhost:5173
# Frontend URL for development

# WebSocket
WS_PORT=3001

# Job Scheduler
ENABLE_AH_FETCH_JOB=true
AH_FETCH_CRON=0 * * * *
# Every hour at minute 0

# Monitoring
ENABLE_HEALTH_CHECK=true
