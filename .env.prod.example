# WoW Price Checker - Production Environment Variables

# PostgreSQL Database
POSTGRES_DB=wow_price_checker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis Cache
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Blizzard API (REQUIRED)
BLIZZARD_CLIENT_ID=your_client_id_here
BLIZZARD_CLIENT_SECRET=your_client_secret_here
BLIZZARD_REGION=eu

# Application URLs
VITE_API_URL=/api/v1
CORS_ORIGIN=*

# Cron Jobs
ENABLE_AH_FETCH_JOB=false
# Set to true to enable automatic hourly auction house data fetching
# Note: This will consume API rate limits

# Domain (for SSL setup)
DOMAIN=your-domain.com
SSL_EMAIL=your-email@example.com
